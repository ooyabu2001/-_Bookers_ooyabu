

<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>


    </thead>

  <tbody>


  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>


     <td>  <%= link_to'Show',book_path(book), class: "button" %> </td>

     <td>   <%= link_to'Edit', edit_book_path(book), class: "button" %></td>

     <td>   <%= link_to 'Destroy', book_path(book.id), method: :delete, data: {confirm:  'Are you sure?'} , class: "button"%> </td>

</tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
<%= @book.errors.count %> errors prohibited this book from being saved:
<ul>
  <%= @book.errors.full_messages.each do |message| %>
  <li><%=message %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: @book do |f| %>
<div class="title_box">

 <div><%= f.label :Title %></div>
<div><%= f.text_field :title %></div>

</div>

<div class="body_box">

 <div><%= f.label :Body %></div>
 <div><%= f.text_area :body %></div>

</div>

<div class="button_box">
<%= f.submit 'Create Book' %>
</div>

<% end %>


